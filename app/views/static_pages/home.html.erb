<% if signed_in? %>
  <div class="row clearfix">
    <%= render 'shared/user_info' %>
    <aside class="span6 feed">
      <%= link_to "Create a new browser!", new_browser_path, class: "btn btn-primary links" %>
      <h3>My Browsers (<%= @browser_items.count %>)</h3>
      <%= render 'shared/feed', object: @browser_items %>
    </aside>
    <aside class="span6 feed">
      <%= link_to "Create a new track!", new_track_path, class: "btn btn-primary links" %>
      <h3>My Tracks (<%= @track_items.count %>)</h3>
      <%= render 'shared/feed', object: @track_items %>
    </aside>
  </div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to Anno-JR</h1>
	  <h2>
	    Your resource for building and managing your <a href="http://www.annoj.org">Anno-J</a> instances!
	  </h2>

	  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>