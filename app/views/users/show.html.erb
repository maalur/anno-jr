<% provide(:title, @user.name) %>
<div class="row">
  <section>
    <h1>
      <%= @user.name %>
		</h1>
		<p><%= @user.title %></p>
		<span><%= @user.about %></span>
  </section>
  <aside class="span6">
    <% if @user.browsers.any? %>
      <h3>Browsers (<%= @user.browsers.count %>)</h3>
      <ol class="browsers">
        <%= render @browsers %>
      </ol>
    <% end %>
  </aside>
  <aside class="span6">
    <% if @user.tracks.any? %>
      <h3>Tracks (<%= @user.tracks.count %>)</h3>
      <ol class="tracks">
        <%= render @tracks %>
      </ol>
    <% end %>
  </aside>
</div>